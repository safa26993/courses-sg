<%- include('../partials/header')-%>
<%- include('../partials/navbar')-%>

<div class="container">
  <div class="card shadow m-4">
      <div class="card-body">
          <h3 class="title p-4 pb-0">Edit Lesson</h3>
          <hr>
          <%- include('../partials/flashMessages') -%>  
          <form  action="/cours/update" method="post">
              <div class="from-group mb-3">
                  <label for="title">Title of lesson</label>
                  <input type="text" name="title" id="title" class="form-control" value="<%= cours.title%>">
              </div>
              
              <input type="hidden" name="id" value="<%= cours.id%>">
              <div class="from-group mb-3">
                  <label for="level">Level</label>
                  <input type="text" name="level" id="level" class="form-control" value="<%= cours.level%>">
              </div>
              <div class="form-group mb-3">
                  <label for="content">The content of lesson</label>
                  <textarea name="content" rows="12" class="form-control">value="<%= cours.content%>"</textarea>
              </div>
              <div class="from-group mb-3">
                  <button type="submit" class="w-100 btn main-btn btn-lg mt-3 shadow">Update</button>
              </div>
          </form>
      </div>       
  </div>
</div>

<%- include('../partials/footer')-%>


