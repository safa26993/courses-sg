<%- include('../partials/header')-%>
<%- include('../partials/navbar')-%>

<div class="container">
    <div class="card shadow m-3">
        <div class="card-body">
            <h3 class="title p-4 pb-0">Add New Article</h3>
            <hr>
            <form  action="" method="post">
                <div class="from-group mb-3">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title">
                </div>
                <div class="from-group mb-3">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" name="description">
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" placeholder="Leave a comment here" name="Article content" style="height: 270px"></textarea>
                    <label for="Article content">Comments</label>
                </div>
                <button type="submit" class="w-100 btn main-btn btn-lg mt-3 shadow">Add New Article</button>
            </form>
        </div>       
    </div>
</div>

<%- include('../partials/footer')-%>