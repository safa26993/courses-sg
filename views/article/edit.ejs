<%- include('../partials/header')-%>
    <%- include('../partials/navbar')-%>

        <div class="container">
            <div class="card shadow m-3">
                <div class="card-body">
                    <a href="/article" class="card-btn" aria-label="read more">
                        <i class="fa-solid fa-arrow-left" style="color: black; font-size: 25px;"></i>
                    </a>
                    <h3 class="title p-4 pb-0">Edit the Article</h3>
                    <hr>
                    <%- include('../partials/flashMessages') -%>
                        <form action="/article/update" method="post">
                            <div class="from-group mb-3">
                                <label for="title">Title</label>
                                <input type="text" name="title" id="title" class="form-control"
                                    value="<%= article.title %>">
                            </div>
                            <input type="hidden" name="id" value="<%= article.id%>">
                            <!-- <div class="from-group mb-3">
                                <label for="description">description</label>
                                <input type="text" name="description" id="description" class="form-control" value="<%= article.description %>">
                            </div> -->
                            <div class="form-group mb-3">
                                <label for="content">content</label>
                                <textarea name="content" rows="6" class="form-control"><%= article.content%></textarea>
                            </div>
                            <div class="from-group mb-3">
                                <label for="date">Date</label>
                                <input type="date" name="date" id="date" class="form-control" value="<%= articleDate%>">
                            </div>
                            <div class="from-group mb-3">
                                <button type="submit" class="w-100 btn main-btn btn-lg mt-3 shadow">Update</button>
                            </div>
                        </form>
                </div>
            </div>
        </div>

        <%- include('../partials/footer')-%>