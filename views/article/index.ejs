<%- include('../partials/header')-%>
<%- include('../partials/navbar')-%>

  <div class="blog pt-5 pb-5">
    <div class="container">
      <!-- flash Messages -->
      <div class="row mt-3"> 
        <div class="col md-12">
          <%- include('../partials/flashMessages') -%>
        </div>      
      </div>
      <div class="main-title text-center mt-2 mb-5 position-relative">
        <h2>Read the Articles</h2>
      </div>
      <% chunk.forEach((articles)=> {%>
        <!-- article cards -->
        <div class="row mt-3">
          <% articles.forEach((article) => {%>
            <div class="col-sm-12 col-md-6 col-lg-4">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"><%= article.title%></h4>
                  <p><span class="badge rounded text-bg-info"><%= article.date.toDateString()%></span></p>
                  <a href="<%= '/article/' + article.id %>" class="btn main-btn">Show</a>
                </div>
              </div>
            </div>
          <%})%> 
        </div>
      <%})%>
    </div>  
  </div>  
  

<%- include('../partials/footer')-%>