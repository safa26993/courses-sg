<%- include('../partials/header')-%>
  <%- include('../partials/navbar')-%>

    <!-- <section class="section article" > -->
    <!-- style="background-image: url('/images/blog-bg.svg')" -->
    <div class="container">
      <div class="main-title text-center mt-5 mb-5 ">
        <p class="section-subtitle">Latest Articles</p>
        <div class="section-title">
          Get Articles With <span class="span-lang">"US"</span> and enjoying.
        </div>
      </div>
      <!-- flash Messages -->
      <div class="row mt-3">
        <div class="col md-12">
          <%- include('../partials/flashMessages') -%>
        </div>
      </div>
      <% chunk.forEach((articles)=> {%>
        <!-- article cards -->
        <div class="row">
          <% articles.forEach((article)=> {%>
            <div class="col-sm-10 col-md-6 col-lg-4">
              <div class="blog-card">
                <!-- Become A Better Blogger: Content Planning -->
                <figure class="card-banner img-holder has-after" style="--width: 370; --height: 370;">
                    <!-- <img src="/images/course-3.jpg" width="370" height="370" loading="lazy" alt="" class="img-cover"> -->
                    <img src="/images/<%= article.img %>" alt="..." width="370" height="370" loading="lazy" alt="" class="img-cover">
                </figure>
                <div class="card-content">
                  <a href="<%= '/article/' + article.id %>" class="card-btn" aria-label="read more">
                    <i class="fa-solid fa-arrow-right" style="color: #ffffff;"></i>
                  </a>
                  <h5>
                    <a href="#" class="card-title ">
                      <%= article.title%>
                    </a>
                  </h5>
                  <p><i class="fa-regular fa-calendar-days" style="color: #1ab79d;"></i> <span class="span fw-semibold">
                      <%= article.date.toDateString()%>
                    </span></p>
                  <!-- <p class="card-text text-black-50 lh-lg">
                      <%= article.description%>
                    </p> -->
                </div>
              </div>
            </div>
            <%})%>
        </div>
        <%})%>
          <img src="/uploads/images/course-3.jpg" alt="" class="shape blog-shape">
    </div>
    <!-- </section> -->
    <%- include('../partials/footer')-%>